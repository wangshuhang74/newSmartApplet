					}
				},
				{
					"path": "switchAccount/index",
					"name": "switchAccount",
					"needLogin": true,
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "切换账号"
					}
				},
				{
					"path": "about/index",
					"name": "about",
					"needLogin": true,
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "关于我们"
					}
				},
				{
					"path": "changePassword/index",
					"name": "changePassword",
					"needLogin": true,
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "修改密码"
					}
				},
				{
					"path": "i18n/index",
					"name": "i18n",
					"needLogin": true,
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "多语言"
					}
				}
			]
		},
		{
			"root": "pagesFn",
			"pages": [
				{
					"path": "workInitiate/index",
					"name": "workInitiate",
					"needLogin": true,
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "发起工单"
					}
				},
				{
					"path": "workInquire/index",
					"name": "workInquire",
					"needLogin": true,
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "工单查询"
					}
				},
				{
					"path": "consult/index",
					"name": "consult",
					"needLogin": true,
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "在线咨询"
					}
				},
				{
					"path": "components/workDetails",
					"name": "workDetails",
					"needLogin": true,
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "工单详情"
					}
				}
			]
		}
	],
	"preloadRule": { // 打开哪个主包页面 预加载对应的分包页面
		"pages/home/index": {
			"network": "all",
			"packages": [
				"pagesAccount"
			]
		},
		"pages/fn/index": {
			"network": "all",
			"packages": [
				"pagesFn"
			]
		},
		"pages/my/index": {
			"network": "all",
			"packages": [
				"pagesMy"
			]
		}
	},
	"globalStyle": {
		"navigationStyle": "default",
		"navigationBarTitleText": "智慧运维",
		"navigationBarBackgroundColor": "#f8f8f8",
		"navigationBarTextStyle": "black",
		"backgroundColor": "#FFFFFF",
		"app-plus": {
			"scrollIndicator": "false",
			"softinputMode": "adjustResize"
		}
	}
}