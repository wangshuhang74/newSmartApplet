{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^wd-(.*)": "wot-design-uni/components/wd-$1/wd-$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/home/index",
			"type": "home",
			"needLogin": true,
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/fn/index",
			"type": "fn",
			"needLogin": true,
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "功能"
			}
		},
		{
			"path": "pages/my/index",
			"type": "my",
			"needLogin": true,
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "我的"
			}
		}
	],
	"tabBar": {
		"color": "#747474",
		"selectedColor": "#1082FF",
		"backgroundColor": "#FFFFFF",
		"borderStyle": "black",
		"height": "50px",
		"fontSize": "10px",
		"iconWidth": "24px",
		"spacing": "3px",
		"list": [
			{
				"iconPath": "static/tabbar/home.png",
				"selectedIconPath": "static/tabbar/home_active.png",
				"pagePath": "pages/home/index",
				"text": "首页"
			},
			{
				"iconPath": "static/tabbar/fn.png",
				"selectedIconPath": "static/tabbar/fn_active.png",
				"pagePath": "pages/fn/index",
				"text": "功能"
			},
			{
				"iconPath": "static/tabbar/my.png",
				"selectedIconPath": "static/tabbar/my_active.png",
				"pagePath": "pages/my/index",
				"text": "我的"
			}
		]
	},
	"subPackages": [ // 分包
		{
			"root": "pagesAccount",
			"pages": [
				{
					"path": "login/index",
					"name": "login",
					"needLogin": false,
					"style": {
						"navigationStyle": "custom"
					}
				},
				{
					"path": "register/index",
					"name": "register",
					"needLogin": false,
					"style": {
						"navigationStyle": "custom"
					}
				},
				{
					"path": "register/personal",
					"name": "registerPersonal",
					"needLogin": false,
					"style": {
						"navigationStyle": "custom"
					}
				},
				{
					"path": "register/firm",
					"name": "registerFirm",
					"needLogin": false,
					"style": {
						"navigationStyle": "custom"
					}
				},
				{
					"path": "forgetPassword/index",
					"name": "forgetPassword",
					"needLogin": false,
					"style": {
						"navigationStyle": "custom"
					}
				}
			]
		},
		{
			"root": "pagesMy",
			"pages": [
				{
					"path": "myInfo/index",
					"name": "myInfo",
					"needLogin": true,
					"style": {
						"navigationStyle": "custom",
						"navigationBarTitleText": "个人档案"
					}
				},
				{
					"path": "receiveUser/index",
					"name": "receiveUser",
